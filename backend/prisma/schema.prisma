// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Player {
  id        Int    @default(autoincrement()) @id
  name      String @unique

  // Relation Fields
  picks     Pick[]
}

model Team {
  id        Int    @default(autoincrement()) @id
  name      String @unique
  city      String

  // Relation Fields
  games   GameTeam[]
  picked   Pick[]
}

model Game {
  id          Int    @default(autoincrement()) @id
  season      Int
  week        Int
  spread      Float?

   // Relation Fields
  winnerId    Int?
  winner      Team?       @relation(fields: [winnerId], references: [id])
  teams       GameTeam[]
  picks       Pick[]
}

model GameTeam {
  field       TeamField

  // Relation Fields
  teamId      Int
  team        Team  @relation(fields: [teamId], references: [id])
  gameId      Int
  game        Game  @relation(fields: [gameId], references: [id])

  @@id([teamId, gameId])
}

model Pick {
  id          Int    @default(autoincrement()) @id
  correct     Boolean?

  // Relation Fields
  player      Player    @relation(fields: [playerId], references: [id])
  playerId    Int
  team        Team      @relation(fields: [teamId], references: [id])
  teamId      Int
  game        Game      @relation(fields: [gameId], references: [id])
  gameId      Int
}


enum TeamField {
  HOME
  AWAY
}
